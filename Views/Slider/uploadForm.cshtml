    ViewBag.Title = "uploadForm";
}
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta http-equiv="content-type" content="text/html; charset=UTF-8">
		<meta charset="utf-8">
		<title>login</title>
		<meta name="generator" content="Bootply" />
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
		<link href="../../Content/cssForLoginPage/bootstrap.min.css" rel="stylesheet">
		<!--[if lt IE 9]>
			<script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
		<link href="../../Content/cssForLoginPage/styles.css" rel="stylesheet">
		<script>
			function goBack()
			{
				window.history.back();
			}
		</script>
	</head>
<body style="background-color: #F0FFF0; ">
    <!--login modal-->
    <div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="goBack();">×</button>
                    <h1 class="text-center">Fill form to upload music</h1>
                </div>
                <div class="modal-body">
                    <form class="form col-md-12 center-block" action="../home/upload_form_save" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="text" class="form-control input-lg" placeholder="singer name" name="singer">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control input-lg" placeholder="album name" name="album">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control input-lg" placeholder="category" name="category">
                        </div>
                        <div class="form-group">
                            <input type="file" class="form-control input-lg" name="upload-file">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-lg btn-block" type="submit">Upload</button>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <div class="col-md-12">
                        <button class="btn" data-dismiss="modal" aria-hidden="true" onclick="goBack();">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- script references -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="../../Content/jsForLoginPage/bootstrap.min.js"></script>
</body>
</html>
